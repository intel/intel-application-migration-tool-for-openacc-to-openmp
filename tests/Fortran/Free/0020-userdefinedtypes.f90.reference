program test
  use m_test
  implicit none
  type(t_date) :: tdate
  type (t_hour) :: thour1
  type  (t_hour_ns) :: thour2

  tdate%year = 2022
  tdate%month = 7
  tdate%day = 13

  !$acc serial copy(tdate)
!$omp target map(tofrom:tdate)
  tdate%month = tdate%month + 1
  !$acc end serial
!$omp end target

  thour1%hour = 23
  thour1%minute = 59
  thour1%second = 58

  !$acc serial copyin(thour1)
!$omp target map(to:thour1)
  thour1%hour = thour1%hour - 1
  !$acc end serial
!$omp end target

  !$acc serial copyout(thour2)
!$omp target map(from:thour2)
  thour2%hour = 23
  thour2%minute = 59
  thour2%second = 58
  thour2%nanosecond = 100
  !$acc end serial
!$omp end target

end program test

